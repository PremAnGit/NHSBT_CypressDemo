{
  "name":"NHSBT-Cypress-Demo",
  "version": "1.0.0",
  "devDependencies": {
    "cypress": "^15.6.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.2",
    "rimraf":"3.0.0",
    "npm-run-all":"^4.1.5"
  },
  "overrides": {
    "glob": ">=11.1.0"
  },
  "scripts": {
    "cypress:run": "npx cypress run",
    "clean:json": "rimraf cypress/results/*.json",
    "merge:reports": "npx mochawesome-merge \"cypress/results/*.json\" > cypress/results/mocha/merged.json",
    "generate:html": "npx marge cypress/results/mocha/merged.json --reportDir cypress/results/mocha --reportFilename 'NHSBT-CypressDemo_ExecutionReport_[datetime]_report'",
    "report:full": "npm-run-all clean:json cypress:run merge:reports generate:html"
  }
}
